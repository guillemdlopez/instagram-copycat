<h1>Dashboard</h1>

<% @posts.each do |post| %>
  <div class="post d-flex">
    <p class="mr-2"><%= post.description %></p>
    <p class="mr-1"><%= link_to 'Show', post_path(post.id) %></p>

    <% if current_user == post.user %>
      <p class="mr-1"><%= link_to 'Edit', edit_post_path(post.id) %></p>
      <p> <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?'}%> </p>
    <% end %>
  </div>
<% end %>
