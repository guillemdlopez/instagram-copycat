<div class="wrapper dashboard">
  <div class="container">
    <h1>Dashboard</h1>
    <div class="row justify-content-center">
      <div class="col-lg-8 avatar-menu">
        <% @posts.each do |post| %>
          <%= link_to post_path(post.id) do %>
            <div class="post-card border bg-white mt-4 rounded">
              <div class="info-post py-2 px-3">
                <div class="user-info ml-3">
                  <strong><p class="mb-0 text-dark user ml-0"><%= post.user.username %></p></strong>
                  <% #LOCATION --> NEXT FEATURE TO IMPLEMENT %>
                </div>
                <strong><p class="mb-0">···</p></strong>
                </div>
                <div class="image-post text-center">
                  <% if post.photo.attached? %>
                    <%= cl_image_tag post.photo.key, width: 400, gravity: 'center'  %>
                  <% end %>
                </div>
                <div class="post-card-icons py-2 px-3">
                  <div class="icons mt-4">
                    <div class="icons-left">
                      <i class="far fa-heart"></i>
                      <i class="far fa-comment"></i>
                      <i class="far fa-paper-plane"></i>
                    </div>
                    <div class="icon-right">
                      <i class="far fa-bookmark"></i>
                    </div>
                  </div>
                </div>
                <div class="post-description d-flex py-2 px-3">
                  <p class="mr-2"> <strong><%= post.user.username %></strong></p>
                  <p class="mr-2 mb-0"><%= post.description %></p>
                </div>
            </div>
          <% end %>
        <% end %>
      </div>
      <div class="col-lg-4">
        <div class="side-menu">
          <div class="user-info d-flex align-items-center">
            <!--- AVATAR OF THE CURRENT USER --->
            <div class="username ml-4">
              <strong><p class="mb-0"><%= current_user.username %></p></strong>
              <p class="mb-0 small text-secondary"><%= current_user.full_name %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
