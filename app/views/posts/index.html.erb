<h1>Dashboard</h1>

<div class="container">
  <% @posts.each do |post| %>
    <div class="post-card border bg-white mt-4 rounded">
      <div class="info-post py-2 px-3">
        <div class="user-info ml-3">
          <strong><p class="mb-0 text-dark user ml-0"><%= post.user.username %></p></strong>
          <% #LOCATION --> NEXT FEATURE TO IMPLEMENT %>
        </div>
        <strong><p class="mb-0">···</p></strong>
        </div>
        <div class="post-card-icons py-2 px-3">
          <div class="icons mt-4">
            <div class="icons-left">
              <i class="far fa-heart"></i>
              <i class="far fa-comment"></i>
              <i class="far fa-paper-plane"></i>
            </div>
            <div class="icon-right">
              <i class="far fa-bookmark"></i>
            </div>
          </div>
        </div>
        <div class="post-description d-flex py-2 px-3">
          <p class="mr-2"> <strong><%= post.user.username %></strong></p>
          <p class="mr-2 mb-0"><%= post.description %></p>
        </div>

    </div>
  <% end %>
</div>
